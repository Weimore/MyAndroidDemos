<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_three_image"
            android:scaleType="fitXY"
            android:background="@color/colorTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_three_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignBottom="@+id/item_three_image"
            android:background="@color/transparantBlack"
            android:textColor="@color/colorWhite"
            android:text="400x400"/>
        <View
            android:id="@+id/item_three_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_three_image"
            android:background="@color/colorBlack"/>
        <TextView
            android:id="@+id/item_three_introduce"
            android:layout_below="@+id/item_three_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="10sp"
            android:layout_margin="5dp"
            android:text="图集:"
            android:textColor="@color/colorBlack" />
    </RelativeLayout>
</android.support.v7.widget.CardView>